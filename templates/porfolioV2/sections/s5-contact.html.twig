<section id="contact" class="contact">
    <div id="sendMessage">
        <p>Votre message a bien été envoyé, merci.</p>
    </div>
    <div id="copyMessage">
        <p>Email copier !</p>
    </div>
    <div class="content-contact">
        <div class="col-1">
            <div class="console">
                <div class="console__top">
                    <span class="circle"></span>
                    <span class="circle"></span>
                    <span class="circle"></span>
                </div>
                <div class="console__middle">
                    <h3>Coordonnées</h3>
                    <a class="typeText" href=""><img class="icon-map" src="icons/icon-map.svg" /> Rue Henri Lecocq, 5000 Namur</a>
                    <button id="btnCopy" class="typeText" type="button"><img class="icon-copy" src="icons/copy.svg" />gravythomas@gmail.com</button>
                    <input id="textCopy" type="text" value="gravythomas@gmail.com" />
                    <a class="typeText" href="tel:0474393739"><img class="icon-gsm" src="icons/icon-gsm.svg" /> 0474 39 37 39</a>
                </div>
                <div class="console__bottom"></div>
            </div>
        </div>
        <div class="col-2">
            <div class="contact">
                <div class="row contact-content">
                    <div class="contact-form">
                        {{ form_start(contactForm, {'attr': {'id': 'contactForm'}}) }}
                        {{ form_widget(contactForm.nom, {'attr': {'class': 'sujet-field', 'placeholder': 'Sujet...'}}) }}
                        {{ form_widget(contactForm.email, {'attr': {'class': 'mail-field', 'placeholder': "Votre Email..."}}) }}
                        {{ form_widget(contactForm.message, {'attr': {'class': 'message-field', 'placeholder': "Votre message..."}}) }}
                        {{ form_end(contactForm) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="col-3">
            <button type="button" class="btn-close closeDialog">Fermer</button>
            <img class="img" src="images/img-contact.svg" alt="" />
            <div class="console">
                <div class="console__top">
                    <span class="circle"></span>
                    <span class="circle"></span>
                    <span class="circle"></span>
                </div>
                <div class="console__middle">
                    <h3>Liens</h3>
                    <a class="btn" target="_blank" href="https://dcode.design/CV-THOMAS_GRAVY-2020.pdf">MON CV</a>
                    <a class="btn" target="_blank" href="https://www.linkedin.com/in/thomasgravy/">LINKEDIN</a>
                    <a class="btn" target="_blank" href="https://www.behance.net/gravythomas" >BEHANCE</a>
                </div>
                <div class="console__bottom"></div>
            </div>
        </div>
    </div>
</section>